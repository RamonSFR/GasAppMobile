<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#274472"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo" />

    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImage"
        android:layout_margin="24dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clipToOutline="true"
        android:outlineProvider="background">

        <EditText
            android:id="@+id/editGasAutonomy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Autonomia na gasolina"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editEthAutonomy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Autonomia no etanol"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editGasPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Preço da gasolina"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editEthPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Preço do etanol"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text=""
            android:textSize="16sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Novo cálculo"
            android:visibility="gone"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</RelativeLayout>
